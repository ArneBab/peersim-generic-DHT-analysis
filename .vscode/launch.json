{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "GUI",
            "type": "python",
            "request": "launch",
            "stopOnEntry": false,
            "pythonPath": "${config:python.pythonPath}",
            "program": "${workspaceRoot}/env/bin/flask",
            "cwd": "${workspaceRoot}/gui/",
            "env": {
                "FLASK_APP": "${workspaceRoot}/gui/start.py",
                "DATA_DIR": "${workspaceRoot}/test_output"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "debugOptions": [
                "RedirectOutput"
            ]
        },
        {
            "name": "GUI (Windows)",
            "type": "python",
            "request": "launch",
            "stopOnEntry": false,
            "pythonPath": "${config:python.pythonPath}",
            "program": "${workspaceRoot}/gui/run.py",
            "cwd": "${workspaceRoot}/gui/",
            "env": {
                "FLASK_APP": "${workspaceRoot}/gui/start.py",
                "DATA_DIR": "${workspaceRoot}/test_output"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "debugOptions": [
                "RedirectOutput"
            ]
        },
        {
            "name": "Experiments",
            "type": "python",
            "request": "launch",
            "stopOnEntry": false,
            "pythonPath": "${config:python.pythonPath}",
            "program": "${workspaceRoot}/analysis/experiments.py",
            "args": [
                "-d", "${workspaceRoot}/test_output",
                "-p", "../../peersim-generic-DHT",
                "-t", "1"
            ],
            "cwd": "${workspaceRoot}/analysis",
            "debugOptions": [
                "RedirectOutput"
            ]
        },
        {
            "name": "Analysis",
            "type": "python",
            "request": "launch",
            "stopOnEntry": false,
            "pythonPath": "${config:python.pythonPath}",
            "program": "${workspaceRoot}/analysis/analysis.py",
            "args": [
                "-d", "${workspaceRoot}/test_output", "-t", "1", "-a"
            ],
            "cwd": "${workspaceRoot}/analysis",
            "debugOptions": [
                "RedirectOutput"
            ]
        }
    ]
}